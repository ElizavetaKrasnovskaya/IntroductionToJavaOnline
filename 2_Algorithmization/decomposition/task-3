package by.jonline.method3.main;

import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
    
        Scanner console = new Scanner(System.in);
        
        System.out.println("Enter side size a: ");
        int side = console.nextInt();
        
        System.out.println("Area of hexagon is " + area(side));
        
    }

    public static double area(int side) {
    
        double areaOfHexagon;
        return areaOfHexagon = (3*Math.sqrt(3)*side*side)/2;
        
    }
}
